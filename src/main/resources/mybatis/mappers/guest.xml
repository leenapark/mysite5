<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guest">
	<resultMap id="resultMapGuestVo" type="com.javaex.vo.GuestVo">
		<result column="no" property="no" />
		<result column="name" property="name" />
		<result column="password" property="password" />
		<result column="content" property="content" />
		<result column="regDate" property="regDate" />
	</resultMap>

	<!-- 쿼리문 작성 -->

	<!-- 전체 리스트 가져오기 resultMap -->
	<select id="selectList" resultMap="resultMapGuestVo">
	    <![CDATA[
	        select  no,
	        		name,
	        		password,
	        		content,
	        		to_date(reg_date, 'YYYY-MM-DD HH:MI:SS') regDate
			from guestbook
			order by no desc
	    ]]>
	</select>

	<!-- 방명록 등록 -->
	<insert id="insert" parameterType="GuestVo">
	    <![CDATA[
	    	insert into guestbook
			values(seq_no.nextval, 
					#{name},
					#{password},
					#{content},
					sysdate)	    
	    ]]>
	</insert>

	<!-- 방명록 삭제 -->
	<delete id="delete" parameterType="GuestVo">
	    <![CDATA[
	    	delete guestbook
			where no = #{no}
			and password = #{password}
	    ]]>
	</delete>
	
	<!-- ajax 방명록 저장 -->
	<insert id="insertSelectKey" parameterType="com.javaex.vo.GuestVo">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">
			select seq_no.nextval from dual
		</selectKey>
		
		<![CDATA[
			insert into guestbook
			values( #{no}, 
					#{name},
					#{password},
					#{content},
					sysdate
			)
		]]>
	</insert>

	
	<select id="select" parameterType="int" resultType="com.javaex.vo.GuestVo">
		<![CDATA[
			select  no,
			        name,
			        content,
			        reg_date regDate
			from guestbook
			where no = #{no}
		]]>
	</select>
</mapper>